doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title #{memo.title} - Memo
	body
		form(method="post" action="/memo?edit=1")
			div
				textarea(name="title") #{memo.title}
			div
				textarea(name="content") #{memo.content}
			div
					input(type="hidden" name="memoId" value=memo.id)
					button(type="submit") 保存
			div
				form(method="post" action="/memo?lock=1")
					input(type="hidden" name="memoId" value=memo.id)
					input(type="checkbox" name="isLocked" style="visibility: hidden" checked)
					button(type="submit") メモをロック
